<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Theme for Android 12+ with proper Splash Screen API -->
    <style name="Theme.HappyTaxes" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Splash Screen (Android 12+) -->
        <item name="android:windowSplashScreenBackground">@color/splash_background</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/splash_background</item>
        <item name="android:windowSplashScreenAnimationDuration">888</item>
    </style>
</resources>

